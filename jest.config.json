{
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testMatch": ["<rootDir>/src/**/__tests__/**/*.spec.ts"],
  "collectCoverageFrom": ["<rootDir>/src/**/*.ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", { "useESM": true }]
  },
  "resetMocks": true
}